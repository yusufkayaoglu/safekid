<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="003-create-cocuk-konum" author="yusuf">
        <createTable tableName="cocuk_konum">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="cocuk_unique_id" type="varchar(32)">
                <constraints nullable="false"/>
            </column>

            <column name="lat" type="double precision">
                <constraints nullable="false"/>
            </column>

            <column name="lng" type="double precision">
                <constraints nullable="false"/>
            </column>

            <column name="recorded_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="cocuk_konum"
                baseColumnNames="cocuk_unique_id"
                referencedTableName="children"
                referencedColumnNames="cocuk_unique_id"
                constraintName="fk_konum_child"/>

        <createIndex tableName="cocuk_konum" indexName="idx_konum_child_time">
            <column name="cocuk_unique_id"/>
            <column name="recorded_at"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
